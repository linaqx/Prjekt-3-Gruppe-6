<table class="table">
    <tr>
        @*<th>
            @Html.DisplayNameFor(model => model.Comments)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.Comments)
        </th>

    </tr>

    @foreach (var item in Model.Comments)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.User.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Message)
            </td>

        </tr>
    }

</table>
